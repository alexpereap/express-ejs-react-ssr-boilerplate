{
  "name": "site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "client:build-dev-hot": "webpack --mode development --config webpack.client.js --devtool inline-source-map --watch",
    "client:build-dev": "webpack --mode development --config webpack.client.js --devtool inline-source-map",
    "client:build-prod": "webpack --mode production --config webpack.client.js --devtool inline-source-map",
    "build": "rm -r -f dist && npm-run-all client:build-prod server:build-prod",
    "build:dev": "npm run client:build-dev && npm run server:build-dev",
    "start": "node dist/server.js",
    "server:build-dev-hot": "NODE_ENV=development webpack --mode development --config webpack.server.js --watch",
    "server:build-dev": "NODE_ENV=development webpack --mode development --config webpack.server.js",
    "server:build-prod": "webpack --mode production --config webpack.server.js",
    "server:start": "nodemon dist/server.js",
    "test": "jest --runInBand --verbose",
    "coverage": "jest --coverage --runInBand --verbose",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\"",
    "dev": "npm run build:dev && npm-run-all --parallel server:build-dev-hot client:build-dev-hot server:start"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^2.0.1",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
